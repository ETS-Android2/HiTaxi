<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationItemRoot">
    <View
        android:id="@+id/locationItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/locationItemIcon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/locationItemSeparator"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/locationItemTextRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/locationItemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locationItemIcon"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/locationItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/muli_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintStart_toEndOf="@id/driverImage"
            app:layout_constraintTop_toTopOf="@id/driverImage"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/locationItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/muli_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintStart_toEndOf="@id/driverImage"
            app:layout_constraintTop_toTopOf="@id/driverImage"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>